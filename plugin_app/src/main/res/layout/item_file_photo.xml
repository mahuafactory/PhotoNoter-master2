<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_item_file"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/layout_item_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_item_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="PhotoNoter"
            android:textColor="#333333"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/txt_item_file_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:text=".jpg 23KB 1080*1920"
            android:textColor="#919191"
            android:textSize="15dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_item_dir_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:singleLine="true"
        android:text="PhotoNoter"
        android:textColor="#333333"
        android:textSize="24dp"/>


</LinearLayout>