<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="154dip"
    android:layout_marginBottom="@dimen/activity_vertical_margin_small"
    android:orientation="vertical">

    <!-- 这个有54dip -->
    <TextView
        android:id="@+id/txt_setting_title"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/setting_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin_small"
        android:gravity="center_vertical"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/txt_mid"/>

    <com.yydcdut.note.widget.MaterialRippleLayout
        android:id="@+id/layout_ripple_sync_auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_height"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="#585858"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="false">

        <include
            android:id="@+id/layout_setting_sync_auto"
            layout="@layout/item_setting_check"/>
    </com.yydcdut.note.widget.MaterialRippleLayout>

    <com.yydcdut.note.widget.MaterialRippleLayout
        android:id="@+id/layout_ripple_sync_wifi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_height"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="#585858"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="false">

        <include
            android:id="@+id/layout_setting_sync_wifi"
            layout="@layout/item_setting_check"/>
    </com.yydcdut.note.widget.MaterialRippleLayout>

</LinearLayout>