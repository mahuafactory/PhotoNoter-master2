<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_album">


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_introduce"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/layout_dots"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_margin_big"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_introduce_1"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/img_introduce_dot_foucs"/>

        <ImageView
            android:id="@+id/img_introduce_2"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/img_introduce_dot"/>

        <ImageView
            android:id="@+id/img_introduce_3"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/img_introduce_dot"/>

        <ImageView
            android:id="@+id/img_introduce_4"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/img_introduce_dot"/>

        <ImageView
            android:id="@+id/img_introduce_5"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/img_introduce_dot"/>

        <ImageView
            android:id="@+id/img_introduce_6"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/img_introduce_dot"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_introduce_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_dots"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btn_guide_enter"
        android:visibility="gone"/>

    <com.yydcdut.note.widget.CircleProgressBarLayout
        android:id="@+id/layout_progress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone">
    </com.yydcdut.note.widget.CircleProgressBarLayout>


</RelativeLayout>